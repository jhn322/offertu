generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lead {  
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // automatically created and linked to the "_id" field in the database.
  email     String   @unique
  phone     String
  createdAt DateTime @default(now())

  @@map("leads")  // Maps to your collection
  @@index([createdAt])  // For better performance when sorting
}
